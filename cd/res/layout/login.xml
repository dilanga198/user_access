<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="60dp" >

        <include android:id="@+id/bar" layout="@layout/template_bar_logged" />
    </LinearLayout>


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">
        <LinearLayout

                android:layout_width="100dp"
                android:layout_height="200dp" android:layout_gravity="left|center_vertical|top|left">

            <include android:id="@+id/list" layout="@layout/template_list" />
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="200dp"
                android:layout_height="200dp" android:layout_gravity="right">

            <include android:id="@+id/myid2" layout="@layout/template_login"/>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>